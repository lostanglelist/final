@using Microsoft.AspNetCore.Identity
@using logintest.Areas.Identity.Data

@inject SignInManager<AccountUser> SignInManager
@inject UserManager<AccountUser> UserManager

<ul ul class="clearlist scroll-nav local-scroll">
@if (SignInManager.IsSignedIn(User))
{
    <li class="active">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="active">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a class="nav-link text-dark" id="logout">Logout</a>
        </form>
    </li>
}
