@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}

<!-- Tab panes -->
<div class="tab-content section-text">

    <div role="tabpanel" class="tab-pane fade show active" id="mini-one">

        <!-- Login Form -->
        <div class="row">
            <div class="col-md-4 offset-md-4">

                <form class="form contact-form" id="account" method="post">
                    <div class="clearfix">
                        <br /><br /><br />
                        <!-- Username -->
                        <div class="form-group">
                            <label>Email</label><input asp-for="Input.Email" type="text" class="input-md round form-control" placeholder="Email" pattern=".{3,100}">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group">
                            <label>Password</label><input asp-for="Input.Password" class="input-md round form-control" placeholder="Password" pattern=".{3,100}">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>                                                      
                        </div>
                    </div>

                    <div class="clearfix">

                        <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
                        
                    </div>

                </form>

            </div>
        </div>
        <!-- End Login Form -->

    </div>
    </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}